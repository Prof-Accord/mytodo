<li id="micropost-<%= todo.id %>">
  <%= link_to gravatar_for(todo.user, size: 50), todo.user %>
  <span class="user"><%= link_to micropost.user.username, todo.user %></span>
  <span class="content"><%= todo.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(todo.created_at) %> ago.
  </span>
</li>

<%= will_paginate @todos %>