<li id="todo-<%= todo.id %>">
  <%= link_to gravatar_for(todo.user, size: 30), todo.user %>

  <span class="user"><%= link_to todo.user.username, todo.user %></span>
  <span class="content"><%= todo.content %></span>
  
  <span class="timestamp">
    投稿：<%= time_ago_in_words(todo.created_at) %>前
  </span>
</li>
