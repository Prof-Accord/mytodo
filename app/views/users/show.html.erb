<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.todos.any? %>
      <h3>Todos (<%= @user.todos.count %>)</h3>
      <ol class="todos">
        <%= render partial: "todo", collection: @todos, as: :todo %>
      </ol>
      <%= paginate @todos %>
    <% end %>
  </div>
</div>
